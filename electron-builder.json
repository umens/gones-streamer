{
  "appId": "com.gones.streamer",
  "productName": "Gones Streamer",
  "directories": {
    "output": "release/"
  },
  "extraResources": [
    "appDatas",
    "assets"
  ],
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!yarn.lock",
    "!yarn-error.log",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!appDatas/",
    "!assets/",
    "!server/",
    "!release/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "dist/assets/logos/logo.png",
    "target": [
      "msi",
      "nsis",
      "portable"
    ]
  },
  "nsis": {
    "oneClick": true,
    "perMachine": true,
    "allowToChangeInstallationDirectory": false
  },
  "mac": {
    "icon": "dist",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist",
    "target": ["AppImage"]
  }
}
